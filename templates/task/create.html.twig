{% extends 'base.html.twig' %}


{% block title %}Ajout d'une tâche{% endblock %}

{% block body_class %}page{% endblock %}
{% block body_id %}{% endblock %}


{% block body %}
    <div class="retour-btn"><a href="{{ path('task_list') }}">Retour</a></div>
    <section class="container">
        <h1>Ajout d'une tâche</h1>
        {{ form_start(form, {'action' : path('task_create')}) }}
        {{ form_widget(form) }}

        <button type="submit" class="btn btn-success pull-right">Ajouter</button>
        {{ form_end(form) }}
    </section>
{% endblock %}